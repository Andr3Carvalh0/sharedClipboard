<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/white">


        <RelativeLayout
            android:id="@id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true">

            <ImageView
                android:id="@+id/action_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/category_text"
                android:layout_marginEnd="11dp"
                android:background="@drawable/ic_keyboard_arrow_right_grey_500_24dp"
                android:theme="@style/SwitchTheme" />

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/category_text"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:adjustViewBounds="false"
                android:background="@drawable/images"
                android:cropToPadding="false"
                android:theme="@style/SwitchTheme" />

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/category_icon"
                android:text="Images"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

