<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="73dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/action_switch"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:theme="@style/SwitchTheme"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="@string/Service_Running_Option_Title"
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_height="24dp"
                android:id="@+id/action_title"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/action_switch"
                android:textAppearance="@android:style/TextAppearance.Material.Title"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp" />

            <TextView
                android:text="@string/Service_Running_Option_Description"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:id="@+id/action_description"
                android:textAppearance="@android:style/TextAppearance.Material.Body1"
                android:layout_below="@+id/action_title"
                android:layout_toStartOf="@+id/action_switch"
                android:textColor="@color/cardview_dark_background" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/cardView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp" />

</RelativeLayout>

