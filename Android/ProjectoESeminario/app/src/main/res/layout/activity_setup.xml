<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".View.Activities.Not.SetupActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/top_space"/>

    <TextView
        android:text="@string/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_below="@+id/top_space"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@+id/title"
        android:id="@+id/middle_space"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="@dimen/setupButton_Belly"
        android:paddingBottom="@dimen/activity_vertical_margin_12dp"
        android:paddingLeft="@dimen/activity_vertical_margin_12dp"
        android:paddingRight="@dimen/activity_vertical_margin_12dp"
        android:paddingTop="@dimen/activity_vertical_margin_12dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/primary"
        fancy:fb_focusColor="@color/primary_dark"
        fancy:fb_radius="32dp"
        fancy:fb_text="Sign In"
        fancy:fb_textColor="@color/white"
        android:layout_below="@+id/middle_space"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/loginButton"
        android:id="@+id/middle_space_sequel"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:paddingBottom="@dimen/activity_vertical_margin_12dp"
        android:paddingLeft="@dimen/activity_vertical_margin_12dp"
        android:paddingRight="@dimen/activity_vertical_margin_12dp"
        android:paddingTop="@dimen/activity_vertical_margin_12dp"
        fancy:fb_borderColor="@color/white"
        fancy:fb_borderWidth="0dp"
        fancy:fb_defaultColor="@color/primary"
        fancy:fb_focusColor="@color/primary_dark"
        fancy:fb_radius="32dp"
        fancy:fb_text="Sign Up"
        fancy:fb_textColor="@color/white"
        android:layout_below="@+id/middle_space_sequel"
        android:layout_alignParentStart="true"
        android:layout_height="48dp" />


</RelativeLayout>
